<h3>
  <div>
    <br>
    Patients (<%= @patients.count %>)
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
    	  
        <th scope="col">Name</th>
        
        <th scope="col">Birthday</th>
        
        <th scope="col">Cpf</th>
        
        <th scope="col">Phone</th>
        
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <%= content_tag :tr, id: dom_id(patient), class: dom_class(patient) do %>
          <td><%= link_to patient.id, patient %></td>
          
            <td><%= patient.name %></td>
          
            <td><%= patient.birthday %></td>
          
            <td><%= patient.cpf %></td>
          
            <td><%= patient.phone %></td>
          
          <td>
            <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', patient, data: { turbo_method: :delete, turbo_confirm: 'Are ou sure?' }, class: 'btn btn-secondary' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New patient", new_patient_path, class: 'btn btn-secondary' %>
</div>
