<h3>
  <div>
    <br>
    Appointments (<%= @appointments.count %>)
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
    	  
        <th scope="col">Hour</th>
        
        <th scope="col">Doctor</th>
        
        <th scope="col">Patient</th>
        
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments.each do |appointment| %>
        <%= content_tag :tr, id: dom_id(appointment), class: dom_class(appointment) do %>
          <td><%= link_to appointment.id, appointment %></td>
          
            <td><%= appointment.hour %></td>
          
            <td><%= appointment.doctor.name %></td>
          
            <td><%= appointment.patient.name %></td>
          
          <td>
            <%= link_to 'Edit', edit_appointment_path(appointment), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', appointment, data: { turbo_method: :delete, turbo_confirm: 'Are ou sure?' }, class: 'btn btn-secondary' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New appointment", new_appointment_path, class: 'btn btn-secondary' %>
</div>
